<Window x:Class="PacMan.UI.View.SaveScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacMan.UI.View"
        mc:Ignorable="d"
        Title="SaveScore" Height="300" Width="300"  WindowStyle="None" AllowsTransparency="True" Background="#E5B24141" BorderBrush="Black" BorderThickness="1"
        Focusable="True" WindowStartupLocation="CenterScreen">
    <Window.InputBindings>
        <MouseBinding  Command="{Binding DragMove}" MouseAction="LeftClick"/>
    </Window.InputBindings>
    <Grid>
        <Label x:Name="lbl_score" Content="Score" FontSize="20" Margin="120,54,120,204" />
        <Label x:Name="lbl_currentScore" Content="{Binding CurrentScore}" HorizontalAlignment="Center" FontSize="30" Margin="10,99,10,135" />
        <Label x:Name="lbl_EnterName" Content="Please enter your name:" FontSize="14" Margin="10,182,120,79" />
        <TextBox x:Name="textBox" Height="37" Margin="178,182,10,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top"/>
        <Button x:Name="btn_Add" Content="Add" HorizontalAlignment="Left" Margin="133,268,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Add}"/>
        <Button x:Name="btn_Cansel" Content="Cansel" HorizontalAlignment="Left" Margin="213,268,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Cansel}"/>

    </Grid>
</Window>
